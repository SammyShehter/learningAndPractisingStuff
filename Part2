  $("body").append('<button id="yallaLeft">Move Left!</button>');
  $("body").append('<button id="yallaDown">Move Down!</button>');
  $("body").append('<button id="yallaRight">Move Right!</button>');
  $("body").append('<button id="yallaUp">Move Up!</button>');
  $("body").append('<button id="yallaStop">Stop!</button>');
$("body").append('<center><h1 id="48" style="display:flex; position:absolute;">Moving obj</h1></center>');

  $("#yallaLeft").click(function () {
    $("#48").animate({ left: "+=100px" }, 1000);
  });
  $("#yallaDown").click(function () {
    $("#48").animate({ top: "+=100px" }, 1000);
  });
  $("#yallaRight").click(function () {
    $("#48").animate({ left: "-=100px" }, 1000);
  });
  $("#yallaUp").click(function () {
    $("#48").animate({ top: "-=100px" }, 1000);
  });
  $("#yallaStop").click(function () {
    $("#48").stop();
  });
  </script>
